<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:animateLayoutChanges="true"
    tools:context=".FlashcardFragment"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/question_cardView"
        android:layout_margin="15dp"
        card_view:cardBackgroundColor="@color/material_dynamic_primary10"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="5dp"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_font"
            android:text="@string/question"
            android:textSize="@dimen/normal_font"
            android:textAppearance="@style/CustomTextAppearanceNormal"/>

        <WebView
            android:id="@+id/question_webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_font"
            android:layout_gravity="center"
            android:contextClickable="false"
            android:hapticFeedbackEnabled="true"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/answer_cardView"
        android:layout_margin="15dp"
        card_view:cardBackgroundColor="@color/material_dynamic_primary10"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="5dp"
        android:visibility="gone"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_font"
            android:textSize="@dimen/normal_font"
            android:text="@string/answer"
            android:textAppearance="@style/CustomTextAppearanceNormal"/>

        <WebView
            android:id="@+id/answer_webView"
            android:layout_marginTop="@dimen/normal_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false" />

    </androidx.cardview.widget.CardView>
</LinearLayout>
